<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Layout.NewPage2"
             Title="NewPage2">
    <VerticalStackLayout>

        <VerticalStackLayout>
            <Label 
            Text="Galeria zdjęć"
            FontSize="28"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button
            Text="Dodaj zdjęcie"
            BackgroundColor="Orange"
            TextColor="White"
            WidthRequest="150"
            Margin="10"
            />
    </VerticalStackLayout>

        <VerticalStackLayout>
            <Label Padding="20"
               Text="Galeria: "
               HorizontalOptions="Center"
               FontSize="20"/>
        <ScrollView>
            <FlexLayout Wrap="Wrap" JustifyContent="SpaceAround">
                <Grid HeightRequest="100" WidthRequest="100">
                    <BoxView BackgroundColor="Red" WidthRequest="100" HeightRequest="100"/>
                    <Image
            Source="goryl.png"
            WidthRequest="90"
            HeightRequest="90">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnThumbnailTapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                </Grid>
                <Grid HeightRequest="100" WidthRequest="100">
                    <BoxView BackgroundColor="Purple" WidthRequest="100" HeightRequest="100"/>
                    <Image
            Source="goryl.png"
            WidthRequest="90"
            HeightRequest="90">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnThumbnailTapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                </Grid>
                <Grid HeightRequest="100" WidthRequest="100">
                    <BoxView BackgroundColor="ForestGreen" WidthRequest="100" HeightRequest="100"/>
                    <Image
                            Source="goryl.png"
                            WidthRequest="90"
                            HeightRequest="90">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnThumbnailTapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                </Grid>
                    <Grid HeightRequest="100" WidthRequest="100">
                        <BoxView BackgroundColor="Blue" WidthRequest="100" HeightRequest="100"/>
                        <Image
            Source="goryl.png"
            WidthRequest="90"
            HeightRequest="90">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnThumbnailTapped"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>
                    <Grid HeightRequest="100" WidthRequest="100">
                        <BoxView BackgroundColor="Yellow" WidthRequest="100" HeightRequest="100"/>
                        <Image
Source="goryl.png"
WidthRequest="90"
HeightRequest="90">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnThumbnailTapped"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>
                    <Grid HeightRequest="100" WidthRequest="100">
                        <BoxView BackgroundColor="Pink" WidthRequest="100" HeightRequest="100"/>
                        <Image
Source="goryl.png"
WidthRequest="90"
HeightRequest="90">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnThumbnailTapped"/>
                            </Image.GestureRecognizers>
                        </Image>
                        
                    </Grid>
                    <Grid HeightRequest="100" WidthRequest="100">
                        <BoxView BackgroundColor="Grey" WidthRequest="100" HeightRequest="100"/>
                        <Image
Source="goryl.png"
WidthRequest="90"
HeightRequest="90">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnThumbnailTapped"/>
                            </Image.GestureRecognizers>
                        </Image>

                    </Grid>
                    <Grid HeightRequest="100" WidthRequest="100">
                        <BoxView BackgroundColor="Aqua" WidthRequest="100" HeightRequest="100"/>
                        <Image
Source="goryl.png"
WidthRequest="90"
HeightRequest="90">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnThumbnailTapped"/>
                            </Image.GestureRecognizers>
                        </Image>
                    </Grid>
                    <Grid HeightRequest="100" WidthRequest="100">
                        <BoxView BackgroundColor="MediumPurple" WidthRequest="100" HeightRequest="100"/>
                        <Image
Source="goryl.png"
WidthRequest="90"
HeightRequest="90">
                            <Image.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnThumbnailTapped"/>
                            </Image.GestureRecognizers>
                        </Image>

                    </Grid>
                </FlexLayout>
        </ScrollView>
    </VerticalStackLayout>
        <VerticalStackLayout
            Margin="10">
            <Label
                Text="Obecna ilość zdjęć: 9"
                FontSize="25"
                HorizontalOptions="Center"/>
            <HorizontalStackLayout HorizontalOptions="Center">
                
            <Button 
                Text="Poprzednia strona"
                BackgroundColor="Orange"
                TextColor="White"
                WidthRequest="150"
                Margin="10"
/>
            <Button 
    Text="Następna strona"
    BackgroundColor="Orange"
    TextColor="White"
                WidthRequest="150"
                Margin="10"
/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </VerticalStackLayout>

</ContentPage>
