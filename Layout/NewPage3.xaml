<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Layout.NewPage3"
             Title="NewPage3">
    <VerticalStackLayout
        HorizontalOptions="Center" Spacing="5">
        <Label 
            Text="Skontaktuj się z nami"
            FontSize="28"/>
        <Entry
            Placeholder="Imie i Nazwisko"
            x:Name="ImieNazwisko"/>
        <Entry
            Placeholder="E-mail"
            Keyboard="Email"
            x:Name="Email"/>
        <Entry
            Placeholder="Temat"
            x:Name="Temat"/>
        <Editor
            Placeholder="Wiadomość"
            x:Name="Wiadomosc"
            HeightRequest="150"/>
        <Button
            Text="Wyślij"
            BackgroundColor="Orange"
            Clicked="OnSubmiteClicked"/>

    </VerticalStackLayout>
</ContentPage>